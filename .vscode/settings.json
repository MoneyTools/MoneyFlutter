{
    "cmake.configureOnOpen": false,
    "cSpell.words": [
        "appbar",
        "BECU",
        "datetime",
        "fitid",
        "fullscreen",
        "LTRB",
        "LTWH",
        "mmcsv",
        "mmdb",
        "mymoney",
        "nchar",
        "nvarchar",
        "Persistable",
        "Rebalance",
        "Revolut",
        "rollup",
        "sankey",
        "sqflite",
        "uniqueidentifier",
        "Xfer"
    ],
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 120,
    "editor.overviewRulerBorder": false,
    "editor.rulers": [
        120
    ],
    "yaml.format.printWidth": 120,
    "dart.lineLength": 120,
    "dart.renameFilesWithClasses": "always",
    "[dart]": {
        "editor.defaultFormatter": "Dart-Code.dart-code"
    },
    "editor.formatOnType": true,
    "markdownlint.config": {
        "MD024": { // Rule for multiple headings with the same name
            "siblings_only": true // Only check for duplicate headings within the same level
        },
    }
}